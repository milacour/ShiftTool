@page "/"


<div class="container text-center">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="display-4 mt-5">Velkommen til ShiftTool</h1>
            <h2 class="lead">Din løsning til effektiv vagtplanlægning.</h2>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Kom i gang</h3>
                    <p class="card-text">Har du ikke en konto? Opret en konto og begynd at bruge ShiftTool til din vagtplanlægning.</p>
                    <a href="/register" class="btn btn-primary btn-block">Opret en konto</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Allerede en bruger?</h3>
                    <p class="card-text">Log ind med din eksisterende konto og få adgang til dine vagtskemaer.</p>
                    <a href="/login" class="btn btn-success btn-block">Log ind</a>
                </div>
            </div>
        </div>
    </div>
</div>
